@model AutosABC.Models.Auto

@{
    ViewData["Title"] = "Crear";
}

<h2>Crear nuevo</h2>

<h4>Auto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Folio" class="control-label"></label>
                <input asp-for="Folio" class="form-control" />
                <span asp-validation-for="Folio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoTransmision" class="control-label"></label>
                <input asp-for="TipoTransmision" class="form-control" />
                <span asp-validation-for="TipoTransmision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionEstetica" class="control-label"></label>
                <input asp-for="DescripcionEstetica" class="form-control" />
                <span asp-validation-for="DescripcionEstetica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SolicitudID" class="control-label"></label>
                <select asp-for="SolicitudID" class ="form-control" asp-items="ViewBag.SolicitudID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar al Listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
