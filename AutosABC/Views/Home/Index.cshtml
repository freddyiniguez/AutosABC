@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner4.svg" alt="Transportes ABC" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Genera una solicitud de transporte de manera fácil y con el detalle que requieres.
                    <a class="btn btn-default" asp-area="" asp-controller="Solicitudes" asp-action="Index">Comenzar</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.svg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Registrar una solicitud, administrar los catálogos, entre otras funcionalidades.
                    <a class="btn btn-default" asp-area="" asp-controller="Home" asp-action="About">Conocer más</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.svg" alt="Ver el código" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Conoce la implementación de la solución y tecnologías utilizadas.
                    <a class="btn btn-default" href="https://github.com/freddyiniguez/AutosABC" target="_blank">
                        Ver código
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Bitácora</h2>
        <ul>
            <li><a asp-area="" asp-controller="Solicitudes" asp-action="Index">Registrar una solicitud</a></li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Administración</h2>
        <ul>
            <li><a asp-area="" asp-controller="Solicitudes" asp-action="Index">Solicitudes</a></li>
            <li><a asp-area="" asp-controller="Autos" asp-action="Index">Autos</a></li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Conoce más</h2>
        <ul>
            <li><a asp-area="" asp-controller="Home" asp-action="About">Acerca de</a></li>
            <li><a href="https://github.com/freddyiniguez/AutosABC" target="_blank">Ver código</a></li>
        </ul>
    </div>
    <div class="row" style="margin-bottom: 40px;"></div>
</div>
